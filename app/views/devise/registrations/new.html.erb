
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-sign"}) do |f| %>
    <h2 class="form-sign-heading"><%= t("user.sign_up")%></h2>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email" %>
  
    <%= f.text_field :name, :class => "form-control", :placeholder => "Name"%>

    <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>

    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirmation" %>

    <div class="submit-button"><%= f.submit t("user.sign_up"), :class => "btn btn-lg btn-primary btn-block" %></div>
<% end %>

