
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-edit", :multipart => true }) do |f| %>
    <h2 class="form-sign-heading"><%= t("user.edit")%></h2>
    <%= devise_error_messages! %>

    
   <div class="well">
    <div class="form-group">
        <%= user_avatar_tag(current_user, :big) %>
        </br>
        修改头像:
        <a href="http://www.gravatar.com" class="text-primary">gravatar.com</a>
        <%= f.file_field :avatar %>
    </div>
    <div class="form-group">
        <%= f.label t("user.email") %>
        <br />
        <%= f.email_field :email, :class => "form-control", :disabled => true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
    <% end %>

    <div class="form-group">
        <%= f.label t("user.name") %>
        <br />
        <%= f.text_field :name, :autofocus => true, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%= f.label t("user.skype") %>
        <br />
        <%= f.text_field :skype, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%= f.label t("user.phone") %>
        <br />
        <%= f.text_field :tel, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%= f.label t("user.short_num") %>
        <br />
        <%= f.text_field :short_tel, :class => "form-control"%>
    </div>
</div>
<div class="well">
    <div class="form-group">
        <%= f.label t("user.new_password") %> <i>(如果不想修改密码请不要进行以下输入操作！)</i><br />
        <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label t("user.new_password_confirmation") %><br />
        <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label t("user.current_password") %> <i>(请输入当前密码确认修改)</i><br />
        <%= f.password_field :current_password, :class => "form-control" %>
    </div>
</div>
    <div class="submit-button">
        <%= f.submit t("update"), :class => "btn btn-lg btn-primary btn-block" %>
    </div>
<% end %>

<div id="cancel_panel">
    <h3><%= t("user.cancel_my_account") %></h3>

    <p>不高兴? <%= button_to t("user.cancel_my_account"), registration_path(resource_name), :data => { :confirm => "确定？" }, :method => :delete, :class => "btn btn-lg btn-danger btn-block" %></p>

    <%= button_to t("back"), :back, :method => :get, :class => "btn btn-lg btn-primary btn-block" %>
</div>
