<h1>Listing weeklies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Body html</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @weeklies.each do |weekly| %>
      <tr>
        <td><%= weekly.title %></td>
        <td><%= weekly.body %></td>
        <td><%= weekly.body_html %></td>
        <td><%= link_to 'Show', weekly %></td>
        <td><%= link_to 'Edit', edit_weekly_path(weekly) %></td>
        <td><%= link_to 'Destroy', weekly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

