<%= form_for(@team) do |f| %>

<div class="form-group">
    <%= f.text_field :name, :class => "form-control", :placeholder => "name" %>
</div>

<div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to "back", teams_path,  :method => "get", :class => 'btn btn-default'%>
</div>
<% end %>

<% if @team.name? %>
<div class="row user_card_div" id="user_card_div">
    <%= render :partial => "user", :collection => @users, :as => :user %>
</div>
<% end %>
