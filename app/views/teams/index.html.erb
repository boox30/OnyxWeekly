<div class="page-header">
    <%= button_to "New Team", new_team_path, :method => :get, :class => "btn btn-success pull-right"%>
    <h1>Teams</h1>
</div>
<% @teams.each do |team| %>
<div class="well">
    <div class="page-header">
        <%= button_to 'Destroy', team, method: :delete, :class => "btn btn-danger btn-xs pull-right", data: { confirm: 'Are you sure?' } %>
        <%= button_to 'Edit', edit_team_path(team), :method => :get, :class => "btn btn-primary btn-xs pull-right team_edit_button" %>
        <h3><%= team.name %></h3>
    </div>
    <div class="row">
        <% @users.each do |user| %>
            <% if team.team_member?(user) %>
                <div class="col-xs-4 col-md-1 user_item">
                    <%= user_avatar_tag(user, :normal) %>
                    <%= user.name %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
<% end %>


