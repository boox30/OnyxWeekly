<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="form-group">
    <%= f.label t("meeting.title") %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("meeting.tag") %><br>
    <%= f.text_field :tags_list, :class => "form-control", :placeholder => "销售 生产 研发" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, :class => "form-control", :rows => "20", :cols => "40" %>
  </div>
  <div class="actions">
    <%= f.submit t("save"), :class => "btn btn-primary" %>
    <%= link_to t("back"), meetings_path,  :method => "get", :class => 'btn btn-default'%>
  </div>
<% end %>


