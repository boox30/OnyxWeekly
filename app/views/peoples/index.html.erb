<div class=" page-header">
    <h1><%= t("people.people")%></h1>
</div>
<div class="row" id="people_list">
    <% @users.each do |user| %>
    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">

            <%= user_avatar_tag(user, :big) %>
            <div class="people_info">
                <h4><%= user.name %></h4>
                <span class="people_info_item"><%= t("user.email")+": "+ user.email %></span>
                <br />
                <span class="people_info_item"><%= t("user.phone")+": "+ user.tel %></span>
                <br />
                <span class="people_info_item"><%= t("user.short_num")+": "+ user.short_tel %></span>
                <br />
                <span class="people_info_item"><%= t("user.skype")+": "+ user.skype %></span>
            </div>
        </div>
    </div>
    <% end %>
</div>